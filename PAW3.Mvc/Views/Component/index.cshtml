@model PAW3.Mvc.Models.ComponentViewModel
@{
    ViewData["Title"] = "Components";
}

<h2 class="mb-4">Components</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add New Component</a>

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Content</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model?.Components != null && Model.Components.Any())
        {
            foreach (var item in Model.Components)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Content</td>
                    <td class="text-end">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"
                           onclick="return confirm('Are you sure you want to delete this component?');">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center text-muted">No components found</td>
            </tr>
        }
    </tbody>
</table>