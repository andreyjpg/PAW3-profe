@model PAW3.Mvc.Models.CategoryViewModel
@{
    ViewData["Title"] = "Categories";
}

<h2 class="mb-4">Categories</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add New Category</a>

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>Category ID</th>
            <th>Name</th>
            <th>Description</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Categories != null && Model.Categories.Any())
        {
            foreach (var item in Model.Categories)
            {
                <tr>
                    <td>@item.CategoryId</td>
                    <td>@item.CategoryName</td>
                    <td>@item.Description</td>
                    <td class="text-end">
                        <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-danger btn-sm"
                           onclick="return confirm('Are you sure you want to delete this category?');">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center text-muted">No categories found</td>
            </tr>
        }
    </tbody>
</table>
