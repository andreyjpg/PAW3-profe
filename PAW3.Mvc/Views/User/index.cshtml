@model UserViewModel
@{
    ViewData["Title"] = "User Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome @Model.Title</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>User Id</th>
            <th>Username</th>
            <th>Email</th>
            <th>Password Hash</th>
            <th>Created At</th>
            <th>Is Active</th>
            <th>Last Modified</th>
            <th>Modified By</th>
            <th>Role Id</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Users)
        {
            <tr>
                <td>@item.UserId</td>
                <td>@item.Username</td>
                <td>@item.Email</td>
                <td>@item.PasswordHash</td>
                <td>@item.CreatedAt</td>
                <td>@item.IsActive</td>
                <td>@item.LastModified</td>
                <td>@item.ModifiedBy</td>
                <td>@item.RoleId</td>

            </tr>
        }
    </tbody>
</table>

<ul>
    @foreach (var item in Model.Items)
    {
        var text = evalItem(@item);
        if (doWeKnowHim(item))
        {
            <li>@item - @text!!!</li>
        }
        else
        {
            <li>@item</li>
        }
    }
</ul>

@functions {
    public bool doWeKnowHim(string item)
    {
        return item.Contains("Les");
    }

    public string evalItem(string item)
    {
        if (item.Contains("Les"))
            return "lo conocemos";
        else
            return "ok";
    }
}
