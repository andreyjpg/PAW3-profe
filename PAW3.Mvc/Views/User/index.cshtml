@model UserViewModel
@{
    ViewData["Title"] = "User Page";
}

<h2 class="mb-4">Users</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add New User</a>

<table class="table table-striped table-hover align-middle">
    <thead>
        <tr>
            <th>User Id</th>
            <th>Username</th>
            <th>Email</th>
            <th>Password Hash</th>
            <th>Created At</th>
            <th>Is Active</th>
            <th>Last Modified</th>
            <th>Modified By</th>
            <th>Role Id</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Users)
        {
            <tr>
                <td>@item.UserId</td>
                <td>@item.Username</td>
                <td>@item.Email</td>
                <td>@item.PasswordHash</td>
                <td>@item.CreatedAt</td>
                <td>@item.IsActive</td>
                <td>@item.LastModified</td>
                <td>@item.ModifiedBy</td>
                <td>@item.RoleId</td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-danger btn-sm"
                       onclick="return confirm('Are you sure you want to delete this category?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<ul>
    @foreach (var item in Model.Items)
    {
        var text = evalItem(@item);
        if (doWeKnowHim(item))
        {
            <li>@item - @text!!!</li>
        }
        else
        {
            <li>@item</li>
        }
    }
</ul>

@functions {
    public bool doWeKnowHim(string item)
    {
        return item.Contains("Les");
    }

    public string evalItem(string item)
    {
        if (item.Contains("Les"))
            return "lo conocemos";
        else
            return "ok";
    }
}
