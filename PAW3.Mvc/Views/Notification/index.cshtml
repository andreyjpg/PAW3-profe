@model PAW3.Mvc.Models.NotificationViewModel
@{
    ViewData["Title"] = "Notifications";
}

<h2 class="mb-4">Notifications</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add New Notification</a>

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>User ID</th>
            <th>Message</th>
            <th>Is Read?</th>
            <th>Created At</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model?.Notifications != null && Model.Notifications.Any())
        {
            foreach (var item in Model.Notifications)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.UserId</td>
                    <td>@item.Message</td>
                    <td>
                        <span class="badge @(item.IsRead == true ? "bg-success" : "bg-secondary")">
                            @(item.IsRead == true ? "Read" : "Unread")
                        </span>
                    </td>
                    <td>@(item.CreatedAt?.ToString("yyyy-MM-dd HH:mm") ?? "")</td>
                    <td class="text-end">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"
                           onclick="return confirm('Are you sure you want to delete this notification?');">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center text-muted">No notifications found</td>
            </tr>
        }
    </tbody>
</table>
