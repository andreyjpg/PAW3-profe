@model PAW3.Mvc.Models.InventoryViewModel
@{
    ViewData["Title"] = "Inventory";
}

<h2 class="mb-4">Inventory</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add New Item</a>

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Unit Price</th>
            <th>Units in Stock</th>
            <th>Product ID</th>
            <th>Last Update</th>
            <th>Date Added</th>
            <th>Modified By</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model?.Inventories != null && Model.Inventories.Any())
        {
            foreach (var item in Model.Inventories)
            {
                <tr>
                    <td>@item.InventoryId</td>
                    <td>@item.UnitPrice</td>
                    <td>@item.UnitsInStock</td>
                    <td>@item.ProductId</td>
                    <td>@item.LastUpdate?.ToString("yyyy-MM-dd")</td>
                    <td>@item.DateAdded?.ToString("yyyy-MM-dd")</td>
                    <td>@item.modifiedBy</td>
                    <td class="text-end">
                        <a asp-action="Edit" asp-route-id="@item.InventoryId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.InventoryId" class="btn btn-danger btn-sm"
                           onclick="return confirm('Are you sure you want to delete this inventory item?');">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center text-muted">No inventory data found</td>
            </tr>
        }
    </tbody>
</table>
