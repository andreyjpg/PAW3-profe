@model PAW3.Mvc.Models.RoleViewModel
@{
    ViewData["Title"] = "Roles";
}

<h2 class="mb-4">Roles</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add New Role</a>

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>Role ID</th>
            <th>Role Name</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model?.Roles != null && Model.Roles.Any())
        {
            foreach (var item in Model.Roles)
            {
                <tr>
                    <td>@item.RoleId</td>
                    <td>@item.RoleName</td>
                    <td class="text-end">
                        <a asp-action="Edit" asp-route-id="@item.RoleId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.RoleId" class="btn btn-danger btn-sm"
                           onclick="return confirm('Are you sure you want to delete this role?');">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="text-center text-muted">No roles found</td>
            </tr>
        }
    </tbody>
</table>