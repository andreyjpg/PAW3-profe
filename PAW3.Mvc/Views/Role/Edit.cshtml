@model PAW3.Models.DTOs.RoleDTO
@{
    ViewData["Title"] = "Edit Role";
}

<h2 class="mb-4">Edit Role</h2>

<form asp-action="Edit" method="post" class="card p-4 shadow-sm">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="RoleId" />

    <div class="mb-3">
        <label asp-for="RoleName" class="form-label fw-bold"></label>
        <input asp-for="RoleName" class="form-control" />
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary me-2">Update</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
