@model TaskViewModel
@{
    ViewData["Title"] = "Task Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome @Model.Title</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Status</th>
            <th>Due Date</th>
            <th>Created At</th>
            <th>Last Modified</th>
            <th>ModifiedBy</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Tasks)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Status</td>
                <td>@item.DueDate</td>
                <td>@item.CreatedAt</td>
                <td>@item.LastModified</td>
                <td>@item.modifiedBy</td>
                
            </tr>
        }
    </tbody>
</table>

<ul>
    @foreach (var item in Model.Items)
    {
        var text = evalItem(@item);
        if (doWeKnowHim(item))
        {
            <li>@item - @text!!!</li>
        }
        else
        {
            <li>@item</li>
        }
    }
</ul>

@functions {
    public bool doWeKnowHim(string item)
    {
        return item.Contains("Les");
    }

    public string evalItem(string item)
    {
        if (item.Contains("Les"))
            return "lo conocemos";
        else
            return "ok";
    }
}
