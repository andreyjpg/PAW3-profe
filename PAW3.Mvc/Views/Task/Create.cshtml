@model PAW3.Models.DTOs.TaskDTO
@{
    ViewData["Title"] = "Create Inventory";
}

<h2 class="mb-4">Add New Task Item</h2>

<form asp-action="Create" method="post" class="card p-4 shadow-sm">
    @Html.AntiForgeryToken()

    <div class="row mb-3">
        <div class="col">
            <label asp-for="Name" class="form-label fw-bold"></label>
            <input asp-for="Name" class="form-control" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="Description" class="form-label fw-bold"></label>
            <input asp-for="Description" class="form-control" placeholder="Description" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col">
            <label asp-for="Status" class="form-label fw-bold"></label>
            <input asp-for="Status" class="form-control" placeholder="Status" />
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
    </div>


    <button type="submit" class="btn btn-success me-2">Save</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
