@model PAW3.Mvc.Models.UserActionViewModel
@{
    ViewData["Title"] = "User Actions";
}

<h2 class="mb-4">User Actions</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add New Action</a>

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model?.UserActions != null && Model.UserActions.Any())
        {
            foreach (var item in Model.UserActions)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"
                               onclick="return confirm('Are you sure you want to delete this action?');">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center text-muted">No user actions found</td>
            </tr>
        }
    </tbody>
</table>