@model PAW3.Mvc.Models.SupplierViewModel
@{
    ViewData["Title"] = "Suppliers";
}

<h2 class="mb-4">Suppliers</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add New Supplier</a>

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Supplier Name</th>
            <th>Contact Name</th>
            <th>Contact Title</th>
            <th>Phone</th>
            <th>Address</th>
            <th>City</th>
            <th>Country</th>
            <th>Last Modified</th>
            <th>Modified By</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model?.Suppliers != null && Model.Suppliers.Any())
        {
            foreach (var item in Model.Suppliers)
            {
                <tr>
                    <td>@item.SupplierId</td>
                    <td>@item.SupplierName</td>
                    <td>@item.ContactName</td>
                    <td>@item.ContactTitle</td>
                    <td>@item.Phone</td>
                    <td>@item.Address</td>
                    <td>@item.City</td>
                    <td>@item.Country</td>
                    <td>@item.LastModified</td>
                    <td>@item.ModifiedBy</td>
                    <td>
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Edit" asp-route-id="@item.SupplierId" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.SupplierId" class="btn btn-danger btn-sm"
                               onclick="return confirm('Are you sure you want to delete this supplier?');">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="11" class="text-center text-muted">No suppliers found</td>
            </tr>
        }
    </tbody>
</table>
