@model PAW3.Models.DTOs.SupplierDTO
@{
    ViewData["Title"] = "Create Supplier";
}

<h2 class="mb-4">Add New Supplier</h2>

<form asp-action="Create" method="post" class="card p-4 shadow-sm">
    @Html.AntiForgeryToken()

    <div class="row mb-3">
        <div class="col">
            <label asp-for="SupplierName" class="form-label fw-bold"></label>
            <input asp-for="SupplierName" class="form-control" placeholder="Supplier name" />
            <span asp-validation-for="SupplierName" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="ContactName" class="form-label fw-bold"></label>
            <input asp-for="ContactName" class="form-control" placeholder="Contact name" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col">
            <label asp-for="ContactTitle" class="form-label fw-bold"></label>
            <input asp-for="ContactTitle" class="form-control" placeholder="Contact title" />
        </div>
        <div class="col">
            <label asp-for="Phone" class="form-label fw-bold"></label>
            <input asp-for="Phone" class="form-control" placeholder="Phone number" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col">
            <label asp-for="Address" class="form-label fw-bold"></label>
            <input asp-for="Address" class="form-control" placeholder="Address" />
        </div>
        <div class="col">
            <label asp-for="City" class="form-label fw-bold"></label>
            <input asp-for="City" class="form-control" placeholder="City" />
        </div>
        <div class="col">
            <label asp-for="Country" class="form-label fw-bold"></label>
            <input asp-for="Country" class="form-control" placeholder="Country" />
        </div>
    </div>

    <div class="d-flex justify-content-start gap-2">
        <button type="submit" class="btn btn-success">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
