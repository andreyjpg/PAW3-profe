@model PAW3.Models.DTOs.SupplierDTO
@{
    ViewData["Title"] = "Edit Supplier";
}

<h2 class="mb-4">Edit Supplier</h2>

<form asp-action="Edit" method="post" class="card p-4 shadow-sm">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="SupplierId" />

    <div class="row mb-3">
        <div class="col">
            <label asp-for="SupplierName" class="form-label fw-bold"></label>
            <input asp-for="SupplierName" class="form-control" />
        </div>
        <div class="col">
            <label asp-for="ContactName" class="form-label fw-bold"></label>
            <input asp-for="ContactName" class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col">
            <label asp-for="ContactTitle" class="form-label fw-bold"></label>
            <input asp-for="ContactTitle" class="form-control" />
        </div>
        <div class="col">
            <label asp-for="Phone" class="form-label fw-bold"></label>
            <input asp-for="Phone" class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col">
            <label asp-for="Address" class="form-label fw-bold"></label>
            <input asp-for="Address" class="form-control" />
        </div>
        <div class="col">
            <label asp-for="City" class="form-label fw-bold"></label>
            <input asp-for="City" class="form-control" />
        </div>
        <div class="col">
            <label asp-for="Country" class="form-label fw-bold"></label>
            <input asp-for="Country" class="form-control" />
        </div>
    </div>

    <div class="d-flex justify-content-start gap-2">
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
